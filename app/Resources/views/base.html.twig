<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
        <title>{% block title %}{% endblock %} | Budget Banana</title>

        <link type="text/css" rel="stylesheet" href="{{ asset('bundles/devbananabudget/css/budget.css') }}">
<link rel="stylesheet" href="{{ asset('bundles/devbananabudget/css/blueprint/screen.css') }}" type="text/css" media="screen, projection">
<link rel="stylesheet" href="{{ asset('bundles/devbananabudget/css/blueprint/print.css') }}" type="text/css" media="print">
<!--[if lt IE 8]>
  <link rel="stylesheet" href="{{ asset('bundles/devbananabudget/css/blueprint/ie.css') }}" type="text/css" media="screen, projection">
<![endif]--></code></pre>

        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
    <div class="container">
    <div class="span-24">
        <p><a href="{{path('homepage')}}"><strong>Budget Banana</strong></a></p>
        </div>
        <div class="span-24" id="navcontainer">
        <ul>
        <li><a href="{{ path('homepage') }}" accesskey="h">Home</a></li>
        <li><a href="{{ path('accounts') }}" accesskey="a">Accounts</a></li>
        <li><a href="{{ path('transactions_index') }}" accesskey="t">Transactions</a></li>
        <li><a href="{{ path('budget') }}" accesskey="b">Budget</a></li>
        <li><a href="{{ path('categories_index') }}" accesskey="c">Categories</a></li>
        </ul>
        </div>
        <div class="span-24">
<div class="span-8">
        <div>
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
                <a href="{{ path('fos_user_security_logout') }}">
                    {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                </a>
            {% else %}
                You are not currently logged in. <a href="{{ path('fos_user_security_login') }}">
Login now
</a> or <a href="{{ path('fos_user_registration_register') }}">
create a new account
</a>.
            {% endif %}
        </div>

        <div id="sidenav">
        <ul>
        <li><a href="{{ path('about') }}">About</a></li>
        <li><a href="{{ path('tutorials_index') }}">Tutorials</a></li>
        </ul>
        </div>
</div>
<div class="span-16 last">
        {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
                <div class="flash-{{ type }}" tabindex="0">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {% block body %}{% endblock %}
</div>
        </div>
        </div>

<script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
<script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
<script type="text/javascript" src="{{ asset("bundles/devbananabudget/js/jquery.min.js") }}"></script>
<script type="text/javascript" src="{{ asset('bundles/devbananabudget/js/jquery-ui/jquery-ui.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/devbananabudget/js/format-money.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
